{
  "name": "sincgames",
  "version": "0.1.4",
  "private": false,
  "description": "Desktop app to detect, package, and sync game saves to Google Drive.",
  "author": "elchino911",
  "repository": {
    "type": "git",
    "url": "https://github.com/elchino911/SincGames.git"
  },
  "main": "electron/main.mjs",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\"",
    "build": "vite build",
    "preview": "vite preview",
    "dist": "npm run build && electron-builder --win nsis portable",
    "release": "npm run build && electron-builder --win nsis portable --publish always"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "chokidar": "^4.0.3",
    "dotenv": "^16.6.1",
    "extract-zip": "^2.0.1",
    "googleapis": "^153.0.0",
    "electron-updater": "^6.6.2",
    "yaml": "^2.8.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.2",
    "concurrently": "^9.2.1",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.sincgames.desktop",
    "productName": "SincGames",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": ".env.example",
        "to": ".env.example"
      }
    ],
    "extraMetadata": {
      "main": "electron/main.mjs"
    },
    "asar": true,
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "artifactName": "${productName}-${version}.${ext}"
    },
    "nsis": {
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "elchino911",
        "repo": "SincGames"
      }
    ]
  }
}
